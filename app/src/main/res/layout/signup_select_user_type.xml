<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="center"
        android:padding="12dp"
        android:text="Select the type of account you would like "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/general_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="General User \n Veruthe oru user"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/trainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_directions_run_black_24dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Trainer,Instructor or coach \n Aashan enne anugrahikkanam "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_wc_black_24dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Business \n Behind every fortune there is a crime"
        android:textSize="14sp" />

</LinearLayout>